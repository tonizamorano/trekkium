<?php
function crear_taxonomia_modalidad() {

    if ( ! post_type_exists( 'product' ) ) return;

    $labels = array(
        'name'                       => _x( 'Modalidad', 'Taxonomy General Name', 'text_domain' ),
        'singular_name'              => _x( 'Modalidad', 'Taxonomy Singular Name', 'text_domain' ),
        'menu_name'                  => __( 'Modalidad', 'text_domain' ),
        'all_items'                  => __( 'Todas las Modalidades', 'text_domain' ),
        'parent_item'                => __( 'Modalidad Padre', 'text_domain' ),
        'parent_item_colon'          => __( 'Modalidad Padre:', 'text_domain' ),
        'new_item_name'              => __( 'Nueva Modalidad', 'text_domain' ),
        'add_new_item'               => __( 'Añadir Nueva Modalidad', 'text_domain' ),
        'edit_item'                  => __( 'Editar Modalidad', 'text_domain' ),
        'update_item'                => __( 'Actualizar Modalidad', 'text_domain' ),
        'view_item'                  => __( 'Ver Modalidad', 'text_domain' ),
        'separate_items_with_commas' => __( 'Separar modalidades con comas', 'text_domain' ),
        'add_or_remove_items'        => __( 'Añadir o eliminar modalidades', 'text_domain' ),
        'choose_from_most_used'      => __( 'Elegir de las más usadas', 'text_domain' ),
        'popular_items'              => __( 'Modalidades populares', 'text_domain' ),
        'search_items'               => __( 'Buscar Modalidades', 'text_domain' ),
        'not_found'                  => __( 'No encontrado', 'text_domain' ),
        'no_terms'                   => __( 'No hay modalidades', 'text_domain' ),
        'items_list'                 => __( 'Lista de modalidades', 'text_domain' ),
        'items_list_navigation'      => __( 'Navegación de la lista de modalidades', 'text_domain' ),
    );


    $args = array(
        'labels'                     => $labels,
        'hierarchical'               => true,
        'public'                     => true,
        'show_ui'                    => true,
        'show_admin_column'          => true,
        'show_in_nav_menus'          => true,
        'show_in_rest'               => true,
        'show_tagcloud'              => true,
        'show_in_quick_edit'         => true,
    );

    register_taxonomy( 'modalidad', array( 'product' ), $args );
}
add_action( 'init', 'crear_taxonomia_modalidad', 20 );

function crear_modalidades() {
    $modalidades = array(
        'Senderismo',
        'Trekking',
        'Alpinismo',
        'Barranquismo',
        'Escalada',
        'Esquí de montaña',
        'Marcha nórdica',
        'Raquetas de nieve',        
        'Vía ferrata'
    );

    foreach ( $modalidades as $modalidad ) {
        if ( ! term_exists( $modalidad, 'modalidad' ) ) {
            wp_insert_term( $modalidad, 'modalidad' );
        }
    }
}
add_action( 'init', 'crear_modalidades', 25 );
